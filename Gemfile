source 'https://rubygems.org'

# Rack is a library used by nearly all Ruby frameworks.
gem "rack"

# Sinatra is a lightweight framework to make routing HTTP requests easier.
gem "sinatra"

# Rspec is a libary for automatically testing our code to see if the
# application is functioning in the way we expect it to.
gem "test-unit"

# SQLite is a database implementation. While most other SQL implementations
# run through a central application which stores all information about each
# database on the system, SQLite databases are single files. This makes
# SQLite very popular for local development.
gem "sqlite3-ruby"
